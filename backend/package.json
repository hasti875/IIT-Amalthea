{
  "name": "expense-reimbursement-backend",
  "version": "1.0.0",
  "description": "Backend for Expense Reimbursement Management System",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "mocha 'tests/**/*.test.js' --require tests/setup.js --timeout 10000",
    "test:unit": "mocha 'tests/unit/**/*.test.js' --require tests/setup.js --timeout 5000",
    "test:integration": "mocha 'tests/integration/**/*.test.js' --require tests/setup.js --timeout 15000",
    "test:watch": "mocha 'tests/**/*.test.js' --require tests/setup.js --watch --reporter spec",
    "test:coverage": "nyc npm run test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "code-quality": "npm run lint && npm run format:check",
    "prepare": "cd .. && husky install backend/.husky"
  },
  "keywords": [
    "expense",
    "reimbursement",
    "mern",
    "mongodb",
    "express"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "sharp": "^0.32.6",
    "tesseract.js": "^5.1.1"
  },
  "devDependencies": {
    "chai": "^4.3.10",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.1",
    "nyc": "^15.1.0",
    "prettier": "^3.1.0",
    "sinon": "^17.0.1",
    "supertest": "^6.3.3"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
